
<script>
  var infoIndex = 1;
  showInfo(infoIndex);

  function showInfo(n){
    var i;
    var info = document.getElementsByClassName("info")
    infoIndex = n
    for(i = 0; i < info.length; i++){
      info[i].style.display = "none"
    }
    info[infoIndex-1].style.display = "block"
  }
</script>
